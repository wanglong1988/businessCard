.zan-toast{
  position:fixed;
  top:35%;
  left:20%;
  transform:translateZ(0) translateY(-100%);
  background:rgba(0,0,0,.7);
  color:#fff;
  font-size:14px;
  width:60%;
  line-height:1.5em;
  margin:0 auto;
  box-sizing:border-box;
  padding:10px;
  text-align:center;
  border-radius:1px;
  z-index:100
  }
.zan-bg{
  position: fixed;
    height: 100%;
    width: 100%;
    background: #000;
    background: rgba(0,0,0,.3);
    z-index: 100;
    top: 0;
    left: 0;
    display: block;
    cursor: pointer;
}